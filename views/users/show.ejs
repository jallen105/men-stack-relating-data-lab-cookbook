<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= user.username %> Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to <%= user.username %>'s Pantry</h1>
    <a href="/users/<%= user._id %>/foods/new">Add New Item</a>
    <h3>Your Pantry:</h3>
    <% if (pantry.length > 0) { %>
        <ul>
          <% pantry.forEach((item) => { %>
            <li>
              <%= item.name %>
              <a href="/users/<%= user._id %>/foods/<%= item._id %>/edit">Edit Item</a>
              <form action="/users/<%= user._id %>/foods/<%= item._id %>?_method=DELETE" method="POST">
                <button type="submit">Delete Item</button>
              </form>
            </li>          
          <% }) %>
        </ul>
    <% } else { %>
      <p>There are no items in this pantry.</p>
    <% } %>

  </body>
</html>
